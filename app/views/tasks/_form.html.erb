<%= form_for(task) do |f| %>
<div class="row">
<div class="col-xs-12 col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">

<%= f.label :content, 'タスク' %>

<%= f.text_field :content, class: 'form-control' %>

<%= f.label :status, '状況' %>
  
<%= f.text_field :status, class: 'form-control'%>
  
<%= f.submit '登録' %>
</div>
</div>

<% end %>